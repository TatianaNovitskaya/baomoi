.wheel {
	width: 100%
	max-width: rem(585)
	margin: 2rem auto 0
	position: relative
	border-radius: 100%;
	box-shadow: 0 0 7px 0 rgba(64, 64, 64, .6), 0 8px 50px rgba(64, 64, 64, .3);
	
	&:before {
		content ""
		display: block;
		position: absolute;
		background: url("../images/lotery-arrow.png") no-repeat
		-webkit-background-size: cover
		background-size: cover
		left: 50%
		transform: translate(-51%, 0);
		bottom: -5rem;
		width: rem(325);
		height: rem(220);
		z-index: 999
	}
}

.wheel-cursor {
	width: rem(128)
	position: absolute
	top: 50%
	left: 50%
	transform translate(-50%, -50%)
	cursor: pointer
	transition all 300ms ease-in-out
	
	&:hover {
		transform translate(-50%, -50%) scale(1.1)
	}
}

.super-rotation {
	animation-name: super-rotation;
	animation-duration: 7s;
	animation-fill-mode: forwards;
	transition-timing-function: ease-in-out;
}

@keyframes super-rotation {
	70% {
		transform: rotate(1673deg);
	}
	100% {
		transform: rotate(1662deg);
	}
}

